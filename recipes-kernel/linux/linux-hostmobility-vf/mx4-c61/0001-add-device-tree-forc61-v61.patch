+	status = "okay";
+};
+
+&sai2 {
+	status = "okay";
+};
+
+&dspi0 {
+	status = "disable";
+
+	mcp2515can: can@1 {
+		compatible = "microchip,mcp2515";
+		pinctrl-names = "default";
+		pinctrl-0 = <&pinctrl_can_int>;
